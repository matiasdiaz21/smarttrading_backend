pTpL = plot(enableTradingInput and showTradeZonesInput and plotTpL > 0 ? plotTpL : na, title="Trade TP Long", style=plot.style_linebr, color=color.rgb(17, 84, 64, 65), linewidth=1)
pSlL = plot(enableTradingInput and showTradeZonesInput and plotStopL > 0 ? plotStopL : na, title="Trade SL Long", style=plot.style_linebr, color=color.rgb(244, 42, 42, 80), linewidth=1)
fill(pEntryL, pTpL, color=color.rgb(17, 84, 64, 65))
fill(pEntryL, pSlL, color=color.rgb(224, 42, 42, 80))

pEntryS = plot(enableTradingInput and showTradeZonesInput and plotEntryS > 0 ? plotEntryS : na, title="Trade Entry Short", style=plot.style_linebr, color=color.rgb(255, 255, 30, 50), linewidth=1)
pTpS = plot(enableTradingInput and showTradeZonesInput and plotTpS > 0 ? plotTpS : na, title="Trade TP Short", style=plot.style_linebr, color=color.rgb(17, 84, 64, 65), linewidth=1)
pSlS = plot(enableTradingInput and showTradeZonesInput and plotStopS > 0 ? plotStopS : na, title="Trade SL Short", style=plot.style_linebr, color=color.rgb(244, 42, 42, 80), linewidth=1)
