        activeFilters := "NONE"

    string structInfo = tradingSignalInput + " | " + tradingStructureInput
    int tradeBars = tradeIsOpen ? bar_index - tradeEntryBar : 0

    table.cell(tradeTable, 0, 0, text="SMC Trading | " + structInfo, text_halign=text.align_center, text_size=tradeTextSize, text_color=color.white, bgcolor=color.rgb(50, 50, 70))
    table.cell(tradeTable, 0, 1, text=tradeOp + " " + syminfo.ticker + " | RR 1:" + str.tostring(takeProfitRRInput), text_size=tradeTextSize, text_halign=text.align_left, text_color=color.fuchsia, bgcolor=color.rgb(20, 20, 30))
    table.cell(tradeTable, 0, 2, text="ENTRY: " + (tradeIsOpen ? str.tostring(math.round(tradeEntry, decimalInput)) : "---"), text_size=tradeTextSize, text_halign=text.align_left, text_color=color.yellow, bgcolor=color.rgb(20, 20, 30))
    table.cell(tradeTable, 0, 3, text="STOP: " + (tradeIsOpen ? str.tostring(math.round(tradeStop, decimalInput)) : "---"), text_size=tradeTextSize, text_halign=text.align_left, text_color=color.red, bgcolor=color.rgb(20, 20, 30))
    table.cell(tradeTable, 0, 4, text="TP: " + (tradeIsOpen ? str.tostring(math.round(tradeTp, decimalInput)) : "---"), text_size=tradeTextSize, text_halign=text.align_left, text_color=color.green, bgcolor=color.rgb(20, 20, 30))
    table.cell(tradeTable, 0, 5, text="LOT: " + (tradeIsOpen ? str.tostring(math.round(tradeLotSize, 5)) + " | $" + str.tostring(math.round(tradePosValue, 2)) : "---") + (tradeIsOpen ? " | " + str.tostring(tradeBars) + " bars" : ""), text_size=tradeTextSize, text_halign=text.align_left, text_color=color.white, bgcolor=color.rgb(20, 20, 30))
    table.cell(tradeTable, 0, 6, text="ID: " + str.tostring(tradeId) + " | " + tradeSignalInfo, text_size=tradeTextSize, text_halign=text.align_left, text_color=color.blue, bgcolor=color.rgb(20, 20, 30))
    table.cell(tradeTable, 0, 7, text="Balance: " + str.tostring(math.round(normalBalance, 2)) + " (" + (normalChange >= 0 ? "+" : "") + str.tostring(math.round(normalPct, 2)) + "%)", text_size=tradeTextSize, text_halign=text.align_left, text_color=normalChange >= 0 ? color.green : color.red, bgcolor=color.rgb(20, 20, 30))
    table.cell(tradeTable, 0, 8, text="Balance BE: " + str.tostring(math.round(beBalance, 2)) + " (" + (beChange >= 0 ? "+" : "") + str.tostring(math.round(bePct, 2)) + "%)", text_size=tradeTextSize, text_halign=text.align_left, text_color=beChange >= 0 ? color.green : color.red, bgcolor=color.rgb(20, 20, 30))
    table.cell(tradeTable, 0, 9, text="W/L/BE: " + str.tostring(totalWins) + "/" + str.tostring(totalLosses) + "/" + str.tostring(totalBEs) + " | Total: " + str.tostring(totalTrades), text_size=tradeTextSize, text_halign=text.align_left, text_color=color.white, bgcolor=color.rgb(20, 20, 30))
    table.cell(tradeTable, 0, 10, text="TMO/OPP: " + str.tostring(totalTimeouts) + "/" + str.tostring(totalOppCloses), text_size=tradeTextSize, text_halign=text.align_left, text_color=color.gray, bgcolor=color.rgb(20, 20, 30))
    table.cell(tradeTable, 0, 11, text="Winrate: " + str.tostring(math.round(winrate, 2)) + "%", text_size=tradeTextSize, text_halign=text.align_left, text_color=winrate >= 50 ? color.green : color.red, bgcolor=color.rgb(20, 20, 30))
    table.cell(tradeTable, 0, 12, text="Adj WR: " + str.tostring(math.round(adjWinrate, 2)) + "%", text_size=tradeTextSize, text_halign=text.align_left, text_color=adjWinrate >= 50 ? color.green : color.red, bgcolor=color.rgb(20, 20, 30))
    table.cell(tradeTable, 0, 13, text="Trend: " + (swingTrend.bias == BULLISH ? "BULL" : "BEAR") + " | Int: " + (internalTrend.bias == BULLISH ? "BULL" : "BEAR"), text_size=tradeTextSize, text_halign=text.align_left, text_color=swingTrend.bias == BULLISH ? color.green : color.red, bgcolor=color.rgb(20, 20, 30))
    table.cell(tradeTable, 0, 14, text="Filters: " + activeFilters, text_size=tradeTextSize, text_halign=text.align_left, text_color=color.aqua, bgcolor=color.rgb(20, 20, 30))
    table.cell(tradeTable, 0, 15, text="PnL/Trade: " + (totalTrades > 0 ? str.tostring(math.round(normalChange / totalTrades, 2)) : "0"), text_size=tradeTextSize, text_halign=text.align_left, text_color=normalChange >= 0 ? color.green : color.red, bgcolor=color.rgb(20, 20, 30))

