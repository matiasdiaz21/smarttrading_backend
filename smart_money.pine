//MUTABLE VARIABLES & EXECUTION
//---------------------------------------------------------------------------------------------------------------------{
parsedOpen  = showTrendInput ? open : na
candleColor = internalTrend.bias == BULLISH ? swingBullishColor : swingBearishColor
plotcandle(parsedOpen,high,low,close,color = candleColor, wickcolor = candleColor, bordercolor = candleColor)

if showHighLowSwingsInput or showPremiumDiscountZonesInput
    updateTrailingExtremes()

    if showHighLowSwingsInput
        drawHighLowSwings()

    if showPremiumDiscountZonesInput
        drawPremiumDiscountZones()

if showFairValueGapsInput
    deleteFairValueGaps()

getCurrentStructure(swingsLengthInput,false)
getCurrentStructure(5,false,true)

if showEqualHighsLowsInput
    getCurrentStructure(equalHighsLowsLengthInput,true)

if showInternalsInput or showInternalOrderBlocksInput or showTrendInput or (enableTradingInput and (tradingStructureInput == 'Internal' or tradingStructureInput == 'Both'))
    displayStructure(true)

if showStructureInput or showSwingOrderBlocksInput or showHighLowSwingsInput or (enableTradingInput and (tradingStructureInput == 'Swing' or tradingStructureInput == 'Both'))
    displayStructure()

if showInternalOrderBlocksInput
    deleteOrderBlocks(true)

if showSwingOrderBlocksInput
    deleteOrderBlocks()

if showFairValueGapsInput
    drawFairValueGaps()

if barstate.islastconfirmedhistory or barstate.islast
    if showInternalOrderBlocksInput        
        drawOrderBlocks(true)
        
    if showSwingOrderBlocksInput        
        drawOrderBlocks()

lastBarIndex    := currentBarIndex
currentBarIndex := bar_index
newBar          = currentBarIndex != lastBarIndex

if barstate.islastconfirmedhistory or (barstate.isrealtime and newBar)
    if showDailyLevelsInput and not higherTimeframe('D')
        drawLevels('D',timeframe.isdaily,dailyLevelsStyleInput,dailyLevelsColorInput)

    if showWeeklyLevelsInput and not higherTimeframe('W')
        drawLevels('W',timeframe.isweekly,weeklyLevelsStyleInput,weeklyLevelsColorInput)

    if showMonthlyLevelsInput and not higherTimeframe('M')
        drawLevels('M',timeframe.ismonthly,monthlyLevelsStyleInput,monthlyLevelsColorInput)

//---------------------------------------------------------------------------------------------------------------------}
//TRADING SYSTEM
//---------------------------------------------------------------------------------------------------------------------{

if enableTradingInput
    // ── SIGNAL DETECTION ──
    bool hasLongCHoCH = false
    bool hasLongBOS = false
    bool hasShortCHoCH = false
    bool hasShortBOS = false

    if tradingStructureInput == 'Swing' or tradingStructureInput == 'Both'
        hasLongCHoCH := currentAlerts.swingBullishCHoCH
        hasLongBOS := currentAlerts.swingBullishBOS
        hasShortCHoCH := currentAlerts.swingBearishCHoCH
        hasShortBOS := currentAlerts.swingBearishBOS

    if tradingStructureInput == 'Internal' or tradingStructureInput == 'Both'
        hasLongCHoCH := hasLongCHoCH or currentAlerts.internalBullishCHoCH
        hasLongBOS := hasLongBOS or currentAlerts.internalBullishBOS
        hasShortCHoCH := hasShortCHoCH or currentAlerts.internalBearishCHoCH
        hasShortBOS := hasShortBOS or currentAlerts.internalBearishBOS

    bool longSignal = false
    bool shortSignal = false

    if tradingSignalInput == 'CHoCH'
        longSignal := hasLongCHoCH
        shortSignal := hasShortCHoCH
    else if tradingSignalInput == 'BOS'
        longSignal := hasLongBOS
        shortSignal := hasShortBOS
    else
        longSignal := hasLongCHoCH or hasLongBOS
        shortSignal := hasShortCHoCH or hasShortBOS

    // Confluence filters
    if useTrendFilterInput
        longSignal := longSignal and swingTrend.bias == BULLISH
        shortSignal := shortSignal and swingTrend.bias == BEARISH
    if useOBFilterInput
        longSignal := longSignal and isNearBullishOB()
        shortSignal := shortSignal and isNearBearishOB()
    if useFVGFilterInput
        longSignal := longSignal and isInsideBullishFVG()
        shortSignal := shortSignal and isInsideBearishFVG()
    if useZoneFilterInput
        longSignal := longSignal and isInDiscountZone()
        shortSignal := shortSignal and isInPremiumZone()

    // Stop levels - dynamic uses internal swing, normal uses swing
    float longStopLevel = useDynamicSLInput and not na(internalLow.currentLevel) and internalLow.currentLevel < close ? internalLow.currentLevel : swingLow.currentLevel
    float shortStopLevel = useDynamicSLInput and not na(internalHigh.currentLevel) and internalHigh.currentLevel > close ? internalHigh.currentLevel : swingHigh.currentLevel
    float minDist = atrMeasure * 0.3
    bool longDistOk = not na(longStopLevel) and math.abs(close - longStopLevel) >= minDist and close > longStopLevel
    bool shortDistOk = not na(shortStopLevel) and math.abs(shortStopLevel - close) >= minDist and close < shortStopLevel

    // Signal info for labels/alerts
    string sigInfo = hasLongCHoCH or hasShortCHoCH ? "CHoCH" : ""
    if hasLongBOS or hasShortBOS
        sigInfo := sigInfo == "" ? "BOS" : sigInfo + "+BOS"

    // ── OPEN LONG ──
    if longSignal and not tradeIsOpen and longDistOk and bar_index > lastCloseBar
        tradeEntry := close
        tradeStop := longStopLevel
        tradeOriginalStop := longStopLevel
        tradeTp := close + (close - longStopLevel) * takeProfitRRInput
        tradeBreakeven := close + (tradeTp - close) * breakevenRatioInput
        tradeType := "LONG"
        tradeIsOpen := true
        tradeId += 1
        tradeEntryBar := bar_index
        tradeBeBar := -1
        tpTriggered := false
        slTriggered := false
        beTriggered := false
        tradeSignalInfo := sigInfo
        tradeQty := (riskPercentInput * normalBalance / 100) / math.abs(close - longStopLevel)
        plotEntryL := tradeEntry
        plotStopL := tradeStop
        plotTpL := tradeTp
        plotEntryS := 0.0
        plotStopS := 0.0
        plotTpS := 0.0
        alert('{"symbol": "' + syminfo.ticker + '", "side": "LONG", "entryPrice": ' + str.tostring(tradeEntry) + ', "stopLoss": ' + str.tostring(tradeStop) + ', "takeProfit": ' + str.tostring(tradeTp) + ', "breakeven": ' + str.tostring(tradeBreakeven) + ', "alertType": "ENTRY", "strategy": "Smart Money Concepts", "timeframe": "' + timeframe.period + '", "alertData": {"id": ' + str.tostring(tradeId) + ', "signal": "' + sigInfo + '", "trendBias": "' + (swingTrend.bias == BULLISH ? "BULLISH" : "BEARISH") + '", "currentPrice": ' + str.tostring(close) + '}}', alert.freq_once_per_bar_close)
        label.new(bar_index, close, text="Long\nID:" + str.tostring(tradeId) + "\n" + sigInfo, style=label.style_label_up, color=color.green, textcolor=color.white, size=tradeTextSize)

    // ── OPEN SHORT ──
    if shortSignal and not tradeIsOpen and shortDistOk and bar_index > lastCloseBar
        tradeEntry := close
        tradeStop := shortStopLevel
        tradeOriginalStop := shortStopLevel
        tradeTp := close - (shortStopLevel - close) * takeProfitRRInput
        tradeBreakeven := close - (close - tradeTp) * breakevenRatioInput
        tradeType := "SHORT"
        tradeIsOpen := true
        tradeId += 1
        tradeEntryBar := bar_index
        tradeBeBar := -1
        tpTriggered := false
        slTriggered := false
        beTriggered := false
        tradeSignalInfo := sigInfo
        tradeQty := (riskPercentInput * normalBalance / 100) / math.abs(shortStopLevel - close)
        plotEntryS := tradeEntry
        plotStopS := tradeStop
        plotTpS := tradeTp
        plotEntryL := 0.0
        plotStopL := 0.0
        plotTpL := 0.0
        alert('{"symbol": "' + syminfo.ticker + '", "side": "SHORT", "entryPrice": ' + str.tostring(tradeEntry) + ', "stopLoss": ' + str.tostring(tradeStop) + ', "takeProfit": ' + str.tostring(tradeTp) + ', "breakeven": ' + str.tostring(tradeBreakeven) + ', "alertType": "ENTRY", "strategy": "Smart Money Concepts", "timeframe": "' + timeframe.period + '", "alertData": {"id": ' + str.tostring(tradeId) + ', "signal": "' + sigInfo + '", "trendBias": "' + (swingTrend.bias == BULLISH ? "BULLISH" : "BEARISH") + '", "currentPrice": ' + str.tostring(close) + '}}', alert.freq_once_per_bar_close)
        label.new(bar_index, close, text="Short\nID:" + str.tostring(tradeId) + "\n" + sigInfo, style=label.style_label_down, color=color.red, textcolor=color.white, size=tradeTextSize)

// ── BREAKEVEN MANAGEMENT ──
if enableTradingInput and tradeIsOpen and bar_index > tradeEntryBar
    if tradeType == "LONG" and high >= tradeBreakeven and not beTriggered
        alert('{"symbol": "' + syminfo.ticker + '", "side": "LONG", "entryPrice": ' + str.tostring(tradeEntry) + ', "stopLoss": ' + str.tostring(tradeEntry) + ', "takeProfit": ' + str.tostring(tradeTp) + ', "alertType": "BREAKEVEN", "strategy": "Smart Money Concepts", "timeframe": "' + timeframe.period + '", "alertData": {"id": ' + str.tostring(tradeId) + ', "mensaje": "Breakeven alcanzado - SL movido a entrada", "currentPrice": ' + str.tostring(close) + '}}', alert.freq_once_per_bar)
        label.new(bar_index, tradeBreakeven, text="BE " + str.tostring(tradeId), style=label.style_label_down, color=color.orange, textcolor=color.white, size=tradeTextSize)
        tradeStop := tradeEntry
        plotStopL := tradeEntry
        tradeBeBar := bar_index
        beTriggered := true
        totalBEs += 1

    if tradeType == "SHORT" and low <= tradeBreakeven and not beTriggered
        alert('{"symbol": "' + syminfo.ticker + '", "side": "SHORT", "entryPrice": ' + str.tostring(tradeEntry) + ', "stopLoss": ' + str.tostring(tradeEntry) + ', "takeProfit": ' + str.tostring(tradeTp) + ', "alertType": "BREAKEVEN", "strategy": "Smart Money Concepts", "timeframe": "' + timeframe.period + '", "alertData": {"id": ' + str.tostring(tradeId) + ', "mensaje": "Breakeven alcanzado - SL movido a entrada", "currentPrice": ' + str.tostring(close) + '}}', alert.freq_once_per_bar)
        label.new(bar_index, tradeBreakeven, text="BE " + str.tostring(tradeId), style=label.style_label_up, color=color.orange, textcolor=color.white, size=tradeTextSize)
        tradeStop := tradeEntry
        plotStopS := tradeEntry
        tradeBeBar := bar_index
        beTriggered := true
        totalBEs += 1

// ── TRAILING STOP ──
if enableTradingInput and tradeIsOpen and useTrailingStopInput and bar_index > tradeEntryBar and beTriggered
    if tradeType == "LONG"
        float newTrailLevel = internalLow.currentLevel
        if not na(newTrailLevel) and newTrailLevel > tradeStop and newTrailLevel > tradeEntry and newTrailLevel < close
            tradeStop := newTrailLevel
            plotStopL := newTrailLevel
            lastTrailLevel := newTrailLevel
    if tradeType == "SHORT"
        float newTrailLevel = internalHigh.currentLevel
        if not na(newTrailLevel) and newTrailLevel < tradeStop and newTrailLevel < tradeEntry and newTrailLevel > close
            tradeStop := newTrailLevel
            plotStopS := newTrailLevel
            lastTrailLevel := newTrailLevel

// ── CLOSE ON OPPOSITE SIGNAL ──
if enableTradingInput and tradeIsOpen and useCloseOnOppositeInput and bar_index > tradeEntryBar
    bool oppositeSignal = false
    if tradeType == "LONG"
        oppositeSignal := currentAlerts.swingBearishCHoCH or currentAlerts.internalBearishCHoCH
    if tradeType == "SHORT"
        oppositeSignal := currentAlerts.swingBullishCHoCH or currentAlerts.internalBullishCHoCH
    if oppositeSignal and not tpTriggered and not slTriggered
        float exitPrice = close
        float posSize_opp = tradeEntry * tradeQty
        float comm_opp = commissionInput * posSize_opp / 100
        float pnl_opp = tradeType == "LONG" ? (exitPrice - tradeEntry) * tradeQty - comm_opp : (tradeEntry - exitPrice) * tradeQty - comm_opp
        normalBalance += pnl_opp
        beBalance += pnl_opp
        array.push(normalOutcomes, pnl_opp > 0 ? 1.0 : 0.0)
        array.push(tradeOutcomes, pnl_opp > 0 ? 1.0 : (beTriggered ? 0.5 : 0.0))
        if array.size(tradeOutcomes) > numOpsInput
            array.shift(tradeOutcomes)
        if array.size(normalOutcomes) > numOpsInput
            array.shift(normalOutcomes)
        if pnl_opp > 0
            totalWins += 1
        else
            totalLosses += 1
        totalOppCloses += 1
        alert('{"symbol": "' + syminfo.ticker + '", "side": "' + tradeType + '", "entryPrice": ' + str.tostring(tradeEntry) + ', "exitPrice": ' + str.tostring(exitPrice) + ', "alertType": "OPPOSITE_CLOSE", "strategy": "Smart Money Concepts", "timeframe": "' + timeframe.period + '", "alertData": {"id": ' + str.tostring(tradeId) + ', "pnl": ' + str.tostring(pnl_opp) + ', "currentPrice": ' + str.tostring(close) + '}}', alert.freq_once_per_bar)
        label.new(bar_index, close, text="OPP " + str.tostring(tradeId) + "\n" + str.tostring(math.round(pnl_opp, 2)), style=tradeType == "LONG" ? label.style_label_down : label.style_label_up, color=color.purple, textcolor=color.white, size=tradeTextSize)
        tpTriggered := true
        slTriggered := true
        beTriggered := false
        plotEntryL := 0.0
        plotTpL := 0.0
        plotStopL := 0.0
        plotEntryS := 0.0
        plotTpS := 0.0
        plotStopS := 0.0
        tradeBreakeven := 0.0
        lastCloseBar := bar_index
        tradeIsOpen := false
        tradeType := "na"

// ── MAX DURATION EXIT ──
if enableTradingInput and tradeIsOpen and useMaxDurationInput and bar_index > tradeEntryBar
    if (bar_index - tradeEntryBar) >= maxDurationBarsInput and not tpTriggered and not slTriggered
        float exitPrice = close
        float posSize_dur = tradeEntry * tradeQty
        float comm_dur = commissionInput * posSize_dur / 100
        float pnl_dur = tradeType == "LONG" ? (exitPrice - tradeEntry) * tradeQty - comm_dur : (tradeEntry - exitPrice) * tradeQty - comm_dur
        normalBalance += pnl_dur
        beBalance += pnl_dur
        array.push(normalOutcomes, pnl_dur > 0 ? 1.0 : 0.0)
        array.push(tradeOutcomes, pnl_dur > 0 ? 1.0 : (beTriggered ? 0.5 : 0.0))
        if array.size(tradeOutcomes) > numOpsInput
            array.shift(tradeOutcomes)
        if array.size(normalOutcomes) > numOpsInput
            array.shift(normalOutcomes)
        if pnl_dur > 0
            totalWins += 1
        else
            totalLosses += 1
        totalTimeouts += 1
        alert('{"symbol": "' + syminfo.ticker + '", "side": "' + tradeType + '", "entryPrice": ' + str.tostring(tradeEntry) + ', "exitPrice": ' + str.tostring(exitPrice) + ', "alertType": "MAX_DURATION", "strategy": "Smart Money Concepts", "timeframe": "' + timeframe.period + '", "alertData": {"id": ' + str.tostring(tradeId) + ', "pnl": ' + str.tostring(pnl_dur) + ', "bars": ' + str.tostring(bar_index - tradeEntryBar) + ', "currentPrice": ' + str.tostring(close) + '}}', alert.freq_once_per_bar)
        label.new(bar_index, close, text="TMO " + str.tostring(tradeId) + "\n" + str.tostring(math.round(pnl_dur, 2)), style=tradeType == "LONG" ? label.style_label_down : label.style_label_up, color=color.gray, textcolor=color.white, size=tradeTextSize)
        tpTriggered := true
        slTriggered := true
        beTriggered := false
        plotEntryL := 0.0
        plotTpL := 0.0
        plotStopL := 0.0
        plotEntryS := 0.0
        plotTpS := 0.0
        plotStopS := 0.0
        tradeBreakeven := 0.0
        lastCloseBar := bar_index
        tradeIsOpen := false
        tradeType := "na"

// ── TAKE PROFIT ──
if enableTradingInput and tradeIsOpen and bar_index > tradeEntryBar
    if tradeType == "SHORT" and low <= tradeTp and not tpTriggered
        alert('{"symbol": "' + syminfo.ticker + '", "side": "SHORT", "entryPrice": ' + str.tostring(tradeEntry) + ', "stopLoss": ' + str.tostring(tradeStop) + ', "takeProfit": ' + str.tostring(tradeTp) + ', "alertType": "TAKE_PROFIT", "strategy": "Smart Money Concepts", "timeframe": "' + timeframe.period + '", "alertData": {"id": ' + str.tostring(tradeId) + ', "currentPrice": ' + str.tostring(close) + '}}', alert.freq_once_per_bar)
        label.new(bar_index, low, text="TP " + str.tostring(tradeId), style=label.style_label_down, color=color.green, textcolor=color.white, size=tradeTextSize)
        tpTriggered := true
        slTriggered := true
        array.push(tradeOutcomes, 1.0)
        array.push(normalOutcomes, 1.0)
        if array.size(tradeOutcomes) > numOpsInput
            array.shift(tradeOutcomes)
        if array.size(normalOutcomes) > numOpsInput
            array.shift(normalOutcomes)
        float posSize = tradeEntry * tradeQty
        float comm = commissionInput * posSize / 100
        float profit = (tradeEntry - tradeTp) * tradeQty - comm
        normalBalance += profit
        beBalance += beTriggered ? profit * (1 - breakevenRatioInput) : profit
        totalWins += 1
        beTriggered := false
        plotEntryS := 0.0
        plotTpS := 0.0
        plotStopS := 0.0
        tradeBreakeven := 0.0
        lastCloseBar := bar_index
        tradeIsOpen := false
        tradeType := "na"

    if tradeType == "LONG" and high >= tradeTp and not tpTriggered
        alert('{"symbol": "' + syminfo.ticker + '", "side": "LONG", "entryPrice": ' + str.tostring(tradeEntry) + ', "stopLoss": ' + str.tostring(tradeStop) + ', "takeProfit": ' + str.tostring(tradeTp) + ', "alertType": "TAKE_PROFIT", "strategy": "Smart Money Concepts", "timeframe": "' + timeframe.period + '", "alertData": {"id": ' + str.tostring(tradeId) + ', "currentPrice": ' + str.tostring(close) + '}}', alert.freq_once_per_bar)
        label.new(bar_index, high, text="TP " + str.tostring(tradeId), style=label.style_label_up, color=color.green, textcolor=color.white, size=tradeTextSize)
        tpTriggered := true
        slTriggered := true
        array.push(tradeOutcomes, 1.0)
        array.push(normalOutcomes, 1.0)
        if array.size(tradeOutcomes) > numOpsInput
            array.shift(tradeOutcomes)
        if array.size(normalOutcomes) > numOpsInput
            array.shift(normalOutcomes)
        float posSize = tradeEntry * tradeQty
        float comm = commissionInput * posSize / 100
        float profit = (tradeTp - tradeEntry) * tradeQty - comm
        normalBalance += profit
        beBalance += beTriggered ? profit * (1 - breakevenRatioInput) : profit
        totalWins += 1
        beTriggered := false
        plotEntryL := 0.0
        plotTpL := 0.0
        plotStopL := 0.0
        tradeBreakeven := 0.0
        lastCloseBar := bar_index
        tradeIsOpen := false
        tradeType := "na"

// ── STOP LOSS ──
if enableTradingInput and tradeIsOpen and bar_index > tradeEntryBar and bar_index != tradeBeBar
    if tradeType == "SHORT" and high >= tradeStop and not slTriggered
        alert('{"symbol": "' + syminfo.ticker + '", "side": "SHORT", "entryPrice": ' + str.tostring(tradeEntry) + ', "stopLoss": ' + str.tostring(tradeStop) + ', "takeProfit": ' + str.tostring(tradeTp) + ', "alertType": "STOP_LOSS", "strategy": "Smart Money Concepts", "timeframe": "' + timeframe.period + '", "alertData": {"id": ' + str.tostring(tradeId) + ', "currentPrice": ' + str.tostring(close) + '}}', alert.freq_once_per_bar)
        label.new(bar_index, tradeStop, text="SL " + str.tostring(tradeId), style=label.style_label_down, color=color.red, textcolor=color.white, size=tradeTextSize)
        slTriggered := true
        tpTriggered := true
        array.push(normalOutcomes, 0.0)
        array.push(tradeOutcomes, beTriggered ? 0.5 : 0.0)
        if array.size(tradeOutcomes) > numOpsInput
            array.shift(tradeOutcomes)
        if array.size(normalOutcomes) > numOpsInput
            array.shift(normalOutcomes)
        float posSize_sl = tradeEntry * tradeQty
        float comm_sl = commissionInput * posSize_sl / 100
        if beTriggered
            normalBalance += (tradeEntry - tradeOriginalStop) * tradeQty - comm_sl
            beBalance += (tradeEntry - tradeTp) * tradeQty * breakevenRatioInput - comm_sl
        else
            float lossVal = (tradeEntry - tradeOriginalStop) * tradeQty - comm_sl
            normalBalance += lossVal
            beBalance += lossVal
        totalLosses += 1
        beTriggered := false
        plotEntryS := 0.0
        plotTpS := 0.0
        plotStopS := 0.0
        tradeBreakeven := 0.0
        lastCloseBar := bar_index
        tradeIsOpen := false
        tradeType := "na"

    if tradeType == "LONG" and low <= tradeStop and not slTriggered
        alert('{"symbol": "' + syminfo.ticker + '", "side": "LONG", "entryPrice": ' + str.tostring(tradeEntry) + ', "stopLoss": ' + str.tostring(tradeStop) + ', "takeProfit": ' + str.tostring(tradeTp) + ', "alertType": "STOP_LOSS", "strategy": "Smart Money Concepts", "timeframe": "' + timeframe.period + '", "alertData": {"id": ' + str.tostring(tradeId) + ', "currentPrice": ' + str.tostring(close) + '}}', alert.freq_once_per_bar)
        label.new(bar_index, tradeStop, text="SL " + str.tostring(tradeId), style=label.style_label_up, color=color.red, textcolor=color.white, size=tradeTextSize)
        slTriggered := true
