// ── INFO TABLE ──
if enableTradingInput and showTradeTableInput
    var table tradeTable = table.new(position=position.bottom_right, columns=1, rows=16, bgcolor=color.rgb(30, 30, 40), border_width=1)

    string tradeOp = tradeIsOpen ? tradeType : "---"
    float normalChange = normalBalance - capitalInput
    float normalPct = capitalInput > 0 ? (normalChange / capitalInput) * 100 : 0.0
    float beChange = beBalance - capitalInput
    float bePct = capitalInput > 0 ? (beChange / capitalInput) * 100 : 0.0
